generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payslip {
  id               String   @id @default(cuid())
  fileUrl          String
  fileName         String
  fileSize         Int
  mimeType         String
  periodMonth      Int?
  periodYear       Int?
  employeeName     String?
  employeeAddress  String?
  employerName     String?
  siretNumber      String?
  urssafNumber     String?
  netToPay         Float
  netBeforeTax     Float    @default(0)
  netTaxable       Float    @default(0)
  grossSalary      Float
  taxAmount        Float
  hoursWorked      Float
  hourlyNetTaxable Float    @default(0)
  extractedJson    Json
  processingStatus String   @default("completed")
  errorMessage     String?
  aiModel          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  inputTokens      Int?
  outputTokens     Int?

  @@index([periodYear, periodMonth])
  @@index([createdAt])
  @@index([processingStatus])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  username  String?  @unique
  password  String?
  role      String   @default("USER")
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
