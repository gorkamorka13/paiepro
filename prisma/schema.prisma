generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        String    @id @default(cuid())
  name      String    @unique
  siret     String?
  urssaf    String?
  payslips  Payslip[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Payslip {
  id               String   @id @default(cuid())
  
  // Fichiers
  fileUrl          String
  fileName         String
  fileSize         Int
  mimeType         String
  
  // Période et Employé
  periodMonth      Int?
  periodYear       Int?
  employeeName     String?
  employeeAddress  String?
  employerName     String?
  siretNumber      String?
  urssafNumber     String?
  
  // Relation Entreprise
  companyId        String?
  company          Company? @relation(fields: [companyId], references: [id])

  // Montants Extraits
  netToPay         Float    @db.DoublePrecision // Net à payer après impôts
  netBeforeTax     Float    @db.DoublePrecision @default(0) // Net à payer avant impôts
  netTaxable       Float    @db.DoublePrecision @default(0) // Net imposable
  grossSalary      Float    @db.DoublePrecision // Salaire brut
  taxAmount        Float    @db.DoublePrecision // Montant des impôts
  hoursWorked      Float    @db.DoublePrecision // Heures travaillées
  hourlyNetTaxable Float    @db.DoublePrecision @default(0) // Salaire horaire net imposable
  
  // Métadonnées
  extractedJson    Json
  processingStatus String   @default("completed") // completed | failed | processing
  errorMessage     String?
  aiModel          String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([periodYear, periodMonth])
  @@index([createdAt])
  @@index([processingStatus])
}
