generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payslip {
  id               String   @id @default(cuid())
  fileUrl          String
  fileName         String
  fileSize         Int
  mimeType         String
  periodMonth      Int?
  periodYear       Int?
  employeeName     String?
  employeeAddress  String?
  employerName     String?
  siretNumber      String?
  urssafNumber     String?
  cesuNumber       String?
  netToPay         Float
  netBeforeTax     Float    @default(0)
  netTaxable       Float    @default(0)
  grossSalary      Float
  taxAmount        Float
  hoursWorked      Float
  hourlyNetTaxable Float    @default(0)
  extractedJson    Json
  processingStatus String   @default("completed")
  errorMessage     String?
  aiModel          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  inputTokens      Int?
  outputTokens     Int?

  extractionLogs   ExtractionLog[]

  @@index([periodYear, periodMonth])
  @@index([createdAt])
  @@index([processingStatus])
}

model ExtractionLog {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())

  // Contexte du document
  fileUrl       String
  fileName      String
  fileSize      Int
  mimeType      String

  // Type d'extraction tentée
  extractionMethod String  // "traditional" | "ai" | "hybrid"
  aiModel          String? // "gemini-2.5-flash" | null

  // Résultat
  success       Boolean
  errorType     String?  // "api_error" | "validation_error" | "parsing_error" | "network_error"
  errorMessage  String?  @db.Text
  errorStack    String?  @db.Text

  // Données brutes pour debug
  rawResponse      String?  @db.Text  // Réponse brute de l'API
  extractedData    Json?              // Données extraites avant validation
  validationErrors Json?              // Erreurs de validation Zod

  // Métriques
  processingTimeMs Int?
  inputTokens      Int?
  outputTokens     Int?

  // Relation optionnelle avec Payslip
  payslipId     String?
  payslip       Payslip? @relation(fields: [payslipId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([success])
  @@index([errorType])
  @@index([extractionMethod])
}

model User {
  id        String   @id @default(cuid())
  name      String?
  username  String?  @unique
  password  String?
  role      String   @default("USER")
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
