generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payslip {
  id               String   @id @default(cuid())
  
  // Fichiers
  fileUrl          String
  fileName         String
  fileSize         Int
  mimeType         String
  
  // Période et Employé
  periodMonth      Int?
  periodYear       Int?
  employeeName     String?
  employeeAddress  String?
  employerName     String?
  siretNumber      String?
  urssafNumber     String?
  
  // Montants Extraits
  netToPay         Float    @db.DoublePrecision // Net à payer après impôts
  netBeforeTax     Float    @db.DoublePrecision @default(0) // Net à payer avant impôts
  netTaxable       Float    @db.DoublePrecision @default(0) // Net imposable
  grossSalary      Float    @db.DoublePrecision // Salaire brut
  taxAmount        Float    @db.DoublePrecision // Montant des impôts
  hoursWorked      Float    @db.DoublePrecision // Heures travaillées
  hourlyNetTaxable Float    @db.DoublePrecision @default(0) // Salaire horaire net imposable
  
  // Métadonnées
  extractedJson    Json
  processingStatus String   @default("completed") // completed | failed | processing
  errorMessage     String?
  aiModel          String?
  
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  @@index([periodYear, periodMonth])
  @@index([createdAt])
  @@index([processingStatus])
}
